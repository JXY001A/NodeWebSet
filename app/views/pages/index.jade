extends ../layout

block content
  .container
    .row
      each cat in categories
        .panel.panel-default
          .panel-heading
            h3
              a(href='#') #{cat.name}
          .panel-body
            if cat.movie 
              each item in cat.movie
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      img(src="#{item.poster}", alt="#{item.title}")
                    .caption
                      h4 #{item.title}
                      p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告片